<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Soniq Space â€“ Dashboard</title>

    <style>
        @import url('https://api.fontshare.com/v2/css?f[]=satoshi@901&display=swap');

        body {
            margin: 0;
            padding: 0;
            background: #264CFF;
            font-family: "Satoshi", sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Video strip */
        .video-strip {
            width: 100%;
            height: 140px;
            overflow: hidden;
            background: #000;
            border-bottom: 5px solid #000;
        }

        .video-strip video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(0.75) contrast(1.3) saturate(1.4);
        }

        /* Animated logo */
        .logo-container {
            width: 100%;
            max-width: 1000px;
            margin: 20px 0;
        }

        svg {
            width: 100%;
            height: 180px;
        }

        svg text {
            font-family: "Satoshi", sans-serif;
        }

        /* Page card */
        .card {
            background: #FFE94A;
            padding: 40px;
            margin-top: 10px;
            border-radius: 25px;
            border: 6px solid #000;
            box-shadow: 14px 14px 0 #000;
            text-align: center;
            width: 460px;
        }

        h2 {
            font-size: 2.2rem;
            color: #FF4F5E;
            text-shadow: 3px 3px 0 #000;
            margin-top: 0;
        }

        p {
            color: #222;
            font-weight: 600;
        }

        .btn {
            display: block;
            padding: 14px;
            margin: 12px 0;
            background: #FF4F5E;
            color: #FFE9B0;
            font-weight: bold;
            text-decoration: none;
            border-radius: 12px;
            box-shadow: 4px 4px 0 #000;
        }

        .btn:hover {
            transform: translate(2px, 2px);
            box-shadow: 2px 2px 0 #000;
        }
    </style>
</head>

<body>

    <!-- video script -->
    <div class="video-strip">
        <video src="/videos/graffiti.mp4" autoplay muted loop></video>
    </div>

    <!-- Logo animation -->
    <div class="logo-container">
        <svg viewBox="0 0 1200 200">
            <defs>
                <pattern id="slidePattern" patternUnits="userSpaceOnUse" width="1200" height="200"></pattern>
            </defs>
            <text x="50" y="150" font-size="150" fill="url(#slidePattern)">SONIQ SPACE</text>
        </svg>
    </div>

    <!-- welcome card -->
    <div class="card">
        <h2>Welcome, <%= username %> </h2>

        <p>Ready to upload your track and enter your personalised room?</p>

        <a href="/upload" class="btn">Upload Track</a>
        <a href="/profile" class="btn">Your Profile</a>
        <a href="/logout" class="btn" style="background:#111; color:#FFE94A;">Logout</a>
    </div>

    <!-- Animation script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script>
        const pattern = document.getElementById("slidePattern");
        const colors = ["#FF6B6B", "#FFD93D", "#6BCB77", "#4D96FF", "#FF922B", "#845EC2"];
        const columns = 22;
        const segmentHeight = 50;

        for (let i = 0; i < columns; i++) {
            const x = i * 50;
            for (let j = 0; j < 8; j++) {
                const rect = document.createElementNS("http://www.w3.org/2000/svg", "rect");
                rect.setAttribute("x", x);
                rect.setAttribute("y", j * segmentHeight);
                rect.setAttribute("width", 50);
                rect.setAttribute("height", segmentHeight);
                rect.setAttribute("fill", colors[Math.floor(Math.random() * colors.length)]);
                pattern.appendChild(rect);

                anime({
                    targets: rect,
                    translateY: [
                        { value: -20 + Math.random() * 40, duration: 150 + Math.random() * 200 },
                        { value: 0, duration: 1200 + Math.random() * 200 }
                    ],
                    easing: 'easeInOutSine',
                    loop: true,
                    direction: 'alternate',
                    delay: Math.random() * 800
                });
            }
        }
    </script>

</body>
</html>
