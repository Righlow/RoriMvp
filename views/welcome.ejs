<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Soniq Space</title>

    <style>
        @import url('https://api.fontshare.com/v2/css?f[]=satoshi@901&display=swap');

        body {
            margin: 0;
            padding: 0;
            background: #111;
            font-family: "Satoshi", sans-serif;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .video-strip {
            width: 100%;
            height: 150px;
            overflow: hidden;
            border-bottom: 6px solid #FFE94A;
            border-top: 6px solid #FFE94A;
            opacity: 0;
            transform: translateY(-40px);
        }

        .video-strip video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .title-container {
            margin-top: 40px;
            opacity: 0;
            transform: scale(0.7);
        }

        svg {
            width: 100%;
            max-width: 900px;
            height: 200px;
            filter: drop-shadow(5px 5px 0px #000);
        }

        .btn-group {
            margin-top: 35px;
            display: flex;
            gap: 30px;
            opacity: 0;
            transform: translateY(40px);
        }

        .btn {
            padding: 14px 26px;
            background: #FF4F5E;
            color: #FFE94A;
            border-radius: 14px;
            text-decoration: none;
            font-size: 1.3rem;
            font-weight: 700;
            box-shadow: 4px 4px 0 #000;
            transition: 0.15s ease;
        }

        .btn:hover {
            transform: translate(-3px, -3px) scale(1.06);
            box-shadow: 7px 7px 0 #000;
        }
    </style>
</head>

<body>

    <div class="video-strip">
        <video src="/videos/graffiti.mp4" autoplay muted loop playsinline></video>
    </div>

    <div class="title-container">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 200">
            <defs>
                <pattern id="slidePattern" patternUnits="userSpaceOnUse" width="1000" height="200"></pattern>
            </defs>
            <text x="50" y="150" font-size="160" fill="url(#slidePattern)">SONIQ SPACE</text>
        </svg>
    </div>

    <div class="btn-group">
        <a href="/login" class="btn">Login</a>
        <a href="/register" class="btn">Register</a>
    </div>

    <!-- Anime.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

    <script>
        /* Colour animation for pattern */
        const pattern = document.getElementById("slidePattern");
        const colors = ["#FF6B6B", "#FFD93D", "#6BCB77", "#4D96FF", "#FF922B", "#845EC2"];

        for (let i = 0; i < 20; i++) {
            const x = i * 50;
            for (let j = 0; j < 8; j++) {
                let r = document.createElementNS("http://www.w3.org/2000/svg", "rect");
                r.setAttribute("x", x);
                r.setAttribute("y", j * 50);
                r.setAttribute("width", 50);
                r.setAttribute("height", 50);
                r.setAttribute("fill", colors[Math.floor(Math.random()*colors.length)]);
                pattern.appendChild(r);

                anime({
                    targets: r,
                    translateY: [
                        { value: -20, duration: 300 },
                        { value: 0, duration: 800 }
                    ],
                    loop: true,
                    easing: "easeInOutSine",
                    direction: "alternate",
                    delay: Math.random()*1000
                });
            }
        }

        /* Page entrance animation */
        gsap.timeline()
            .to(".video-strip", { opacity: 1, y: 0, duration: 1.1, ease: "power3.out" })
            .to(".title-container", { opacity: 1, scale: 1, duration: 1.1, ease: "back.out(1.7)" }, "-=0.5")
            .to(".btn-group", { opacity: 1, y: 0, duration: 1, ease: "power3.out" }, "-=0.7");
    </script>

</body>
</html>
